<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h5 class="card-title">Historial de Inventario</h5>
        <div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add-record-modal">Añadir Registro</button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Fecha y Hora</th>
                        <th>Tipo de Registro</th>
                        <th>Cantidad</th>
                    </tr>
                </thead>
                <tbody>
                    {{#inventory}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{datetime}}</td>
                        <td>{{entry_type}}</td>
                        <td>{{quantity}}</td>
                    </tr>
                    {{/inventory}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="add-record-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Añadir Registro de Inventario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="id" class="form-label">ID</label>
                        <input type="number" class="form-control" id="id">
                    </div>
                    <div class="mb-3">
                        <label for="datetime" class="form-label">Fecha y Hora</label>
                        <input type="date" class="form-control" id="datetime">
                    </div>
                    <div class="mb-3">
                        <label for="entry_type" class="form-label">Tipo de Registro</label>
                        <select class="form-select" id="entry_type">
                            <option selected="selected">Entrada</option>
                            <option>Salida</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="quantity" class="form-label" value="0">Cantidad</label>
                        <input type="number" class="form-control" id="quantity">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>